@model ITBlog.Business.DTO.AuthorDTO
@{
    Layout = "_LayoutAboutMe";
}
<div class="content-wrap pb-0">
    @if (Model != null){
        <div class="container">

            <div class="row">
                @if (!string.IsNullOrEmpty(Model.AboutMe)){
                    <div class="col-lg-6">
                        <h3>Hakkımda</h3>

                        <p>@Html.Raw(Model.AboutMe)</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.AuthorAim)){
                    <div class="col-lg-6">
                        <h3>Hedeflerim</h3>

                        <p>@Html.Raw(Model.AboutMe)</p>
                    </div>
                }
 
            </div>

        </div>

        <div class="section parallax dark bottommargin-lg" style="background-image: url('images/services/home-testi-bg.jpg'); background-size: cover; padding: 100px 0;" data-bottom-top="background-position:0px 0px;" data-top-bottom="background-position:0px -500px;">

            <div class="container clearfix">

                <div class="row">
                    @if (Model.HoursPerWeek != 0)
                    {
                        <div class="col-lg-3 text-center" data-animate="bounceIn">
                            <i class="i-plain i-large mx-auto mb-0 icon-time"></i>
                            <div class="counter counter-lined"><span data-from="0" data-to="@Model.HoursPerWeek" data-refresh-interval="50" data-speed="4000" data-comma="true"></span>+</div>
                            <h5>Haftalık Çalışma Saati</h5>
                        </div>
                    }

                    @if (Model.LinesOfCode != 0){
                        <div class="col-lg-3 text-center" data-animate="bounceIn" data-delay="200">
                            <i class="i-plain i-large mx-auto mb-0 icon-code"></i>
                            <div class="counter counter-lined"><span data-from="100" data-to="@Model.LinesOfCode" data-refresh-interval="50" data-speed="2500" data-comma="true"></span></div>
                            <h5>Yazılan Kod Satırı</h5>
                        </div>
                    }

                    @if (Model.Projects != null){
                        <div class="col-lg-3 text-center" data-animate="bounceIn" data-delay="400">
                            <i class="i-plain i-large mx-auto mb-0 icon-briefcase"></i>
                            <div class="counter counter-lined"><span data-from="0" data-to="@Model.Projects.Count()" data-refresh-interval="50" data-speed="3500" data-comma="true"></span></div>
                            <h5>Tamamlanan Projeler</h5>
                        </div>
                    }

                    @if (Model.PostCount != 0){
                        <div class="col-lg-3 text-center" data-animate="bounceIn" data-delay="600">
                            <i class="i-plain i-large mx-auto mb-0 icon-dribbble2"></i>
                            <div class="counter counter-lined"><span data-from="0" data-to="@Model.PostCount" data-refresh-interval="30" data-speed="2700" data-comma="true"></span></div>
                            <h5>Gönderi Sayısı</h5>
                        </div>
                    }

                </div>

            </div>

        </div>

        <div class="container clearfix">

            <div class="row">
                <div class="col-lg-12 bottommargin clearfix">

                    <div class="fancy-title title-border">
                        <h4>Yeteneklerim</h4>
                    </div>

                    <ul class="skills">
                        @if(Model.Skills != null){
                            @foreach (var item in Model.Skills.OrderByDescending(x => x.SkillLearntPercantage))
                            {
                                <li data-percent="@item.SkillLearntPercantage">
                                    <span>@item.SkillName</span>
                                    <div class="progress">
                                        <div class="progress-percent"><div class="counter counter-inherit counter-instant"><span data-from="0" data-to="@item.SkillLearntPercantage" data-refresh-interval="30" data-speed="1000"></span>%</div></div>
                                    </div>
                                </li>
                            }
                        }
                    </ul>

                </div>
            </div>

        </div>

        @if (Model.Projects != null){
            @if(Model.Projects.Count > 0){
                <div class="section mb-0">
                    <div class="container">
                        <div class="heading-block center border-bottom-0 mb-0">
                            <h3>Geliştirmiş Olduğum Projeler</h3>
                            <span>Katılım sağladığım veya geliştirmiş olduğum projeler...</span>
                        </div>
                    </div>
                </div>

                <div id="portfolio" class="portfolio row grid-container portfolio-reveal g-0">
                    @foreach (var item in Model.Projects)
                    {
                        <article class="portfolio-item col-12 col-sm-6 col-md-4 col-lg-1-5 pf-illustrations">
                            <div class="grid-inner">
                                <div class="portfolio-image">
                                    <a href="portfolio-single.html">
                                        <img src="images/portfolio/4/2.jpg" alt="Locked Steel Gate">
                                    </a>
                                    <div class="bg-overlay">
                                        <div class="bg-overlay-content dark" data-hover-animate="fadeIn" data-hover-parent=".portfolio-item">
                                            <a href="images/portfolio/full/2.jpg" class="overlay-trigger-icon bg-light text-dark" data-hover-animate="fadeInDownSmall" data-hover-animate-out="fadeOutUpSmall" data-hover-speed="350" data-hover-parent=".portfolio-item" data-lightbox="image" title="Image"><i class="icon-line-plus"></i></a>
                                            <a href="portfolio-single.html" class="overlay-trigger-icon bg-light text-dark" data-hover-animate="fadeInDownSmall" data-hover-animate-out="fadeOutUpSmall" data-hover-speed="350" data-hover-parent=".portfolio-item"><i class="icon-line-ellipsis"></i></a>
                                        </div>
                                        <div class="bg-overlay-bg dark" data-hover-animate="fadeIn" data-hover-parent=".portfolio-item"></div>
                                    </div>
                                </div>
                                <div class="portfolio-desc">
                                    <h3><a href="portfolio-single.html">Locked Steel Gate</a></h3>
                                    <span><a href="#">Illustrations</a></span>
                                </div>
                            </div>
                        </article>
                    }
                </div>
            }
           

            <!-- #portfolio end -->
        }

    }

</div>
