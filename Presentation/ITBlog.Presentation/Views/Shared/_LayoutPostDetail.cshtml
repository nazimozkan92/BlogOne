@using ITBlog.Presentation.Extensions
<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="author" content="SemiColonWeb" />

	<!-- Stylesheets
	============================================= -->
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700|Poppins:300,400,500,600,700|PT+Serif:400,400i&display=swap" rel="stylesheet" type="text/css" />
	<link rel="stylesheet" href="~/css/bootstrap.css" type="text/css" />
	<link rel="stylesheet" href="~/style.css" type="text/css" />
	<link rel="stylesheet" href="~/css/dark.css" type="text/css" />
	<link rel="stylesheet" href="~/css/font-icons.css" type="text/css" />
	<link rel="stylesheet" href="~/css/animate.css" type="text/css" />
	<link rel="stylesheet" href="~/css/magnific-popup.css" type="text/css" />

	<link rel="stylesheet" href="~/css/custom.css" type="text/css" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />

	<!-- Document Title
	============================================= -->
	<title>ITBlog</title>

</head>

<body class="stretched">
	<a href="#" class="btn btn-info me-2" style="display:none" id="infoAlert" data-notify-type="info" data-notify-msg="<i class='icon-info-sign me-1'></i> Welcome to Canvas Demo!" onclick="SEMICOLON.widget.notifications({ el: this }); return false;">Show Info</a>

	<a href="#" class="btn btn-danger me-2" style="display:none" id="errorAlert" data-notify-type="error" data-notify-msg="<i class='icon-remove-sign me-1'></i> Incorrect Input. Please Try Again!" onclick="SEMICOLON.widget.notifications({ el: this }); return false;">Show Error</a>

	<a href="#" class="btn btn-success me-2" style="display:none" id="successAlert" data-notify-type="success" data-notify-msg="<i class='icon-ok-sign me-1'></i> Message Sent Successfully!" onclick="SEMICOLON.widget.notifications({ el: this }); return false;">Show Success</a>

	<a href="#" class="btn btn-warning me-2" style="display:none" id="warningAlert" data-notify-type="warning" data-notify-msg="<i class='icon-warning-sign me-1'></i> Don't try to be too Smart!" onclick="SEMICOLON.widget.notifications({ el: this }); return false;">Show Warning</a>

	<!-- Document Wrapper
	============================================= -->
	<div id="wrapper" class="clearfix">

		<!-- Header
		============================================= -->
		<header id="header" class="header-size-sm">
			<div class="container">
				<div class="header-row">

					<!-- Logo
					============================================= -->
					<div id="logo" class="mx-auto">
						<a href="/" class="standard-logo" data-dark-logo="~/images/logo/2.png"><img src="~/images/logo/2.png" alt="Canvas Logo"></a>
					</div><!-- #logo end -->

				</div>
			</div>

			<div id="header-wrap" class="border-top border-f5">
				<div class="container">
					<div class="header-row justify-content-center">

						<div class="header-misc">

							<!-- Top Search
							============================================= -->
							<div id="top-search" class="header-misc-icon">
								<a href="#" id="top-search-trigger"><i class="icon-line-search"></i><i class="icon-line-cross"></i></a>
							</div><!-- #top-search end -->

						</div>

						<div id="primary-menu-trigger">
							<svg class="svg-trigger" viewBox="0 0 100 100"><path d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20"></path><path d="m 30,50 h 40"></path><path d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20"></path></svg>
						</div>
						@await Html.RenderAction("GetNavigationCategories","Category")


						<form class="top-search-form" action="/Home/Search" method="get">
							<input type="text" name="SearchText" class="form-control" value="" placeholder="Arama.." autocomplete="off">
						</form>

					</div>

				</div>
			</div>
			<div class="header-wrap-clone"></div>
		</header><!-- #header end -->

		<!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">
				<div class="container clearfix">
					@RenderBody()
				</div>
			</div>
		</section><!-- #content end -->
		@await Html.RenderAction("Footer","Home")


	</div><!-- #wrapper end -->
	<!-- Go To Top
	============================================= -->
	<div id="gotoTop" class="icon-angle-up"></div>

	<!-- JavaScripts
	============================================= -->
	<script src="~/js/jquery.js"></script>
	<script src="~/js/plugins.min.js"></script>

	<!-- Footer Scripts
	============================================= -->
	<script src="~/js/functions.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>